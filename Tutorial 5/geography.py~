import osmium

class BridgeHandler(osmium.SimpleHandler):
    def __init__(self):
        super().__init__()
        self.bridges = []

    def node(self, n):
        if 'bridge' in n.tags and n.tags['bridge'] == 'yes':
            self.bridges.append(n)

    def way(self, w):
        if 'bridge' in w.tags and w.tags['bridge'] == 'yes':
            self.bridges.append(w)

# Initialize handler and apply it to the pbf file
handler = BridgeHandler()
handler.apply_file('input.pbf')

# Access bridges data
print(f"Found {len(handler.bridges)} bridges.")
